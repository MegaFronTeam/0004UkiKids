mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button" disabled)
		input(type="text" value="1"  inputmode='numeric')
		+e.btn--plus(type="button")



mixin search()
	+b.search-block--js
		form
			input(type="text" placeholder="Поиск по сайту" inputmode='search' class="search-input")
			+e.buttons
				button(class="search-btn")
					+icon("search")
				button 
					+icon("arrows")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)
			if t
				h1.h2= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

