mixin cartItem(img, title, color, size, price='3 510 р.', cost='3 510 р.')
	+e.item.LI
		+e.item-name
			+e.img-wrap
				+img(`img/cart-${img}.jpg`)
			+e.descr
				+e.title= title
				div(class="sCart__color sCart__color--" + color)
					| Цвет:
					+e.circle
				+e.size Размер 
					span= size
		+e.price= price
		+b.addBlock
			+e.btn--minus(type="button" disabled)
			input(type="text" value="1"  inputmode='numeric')
			+e.btn--plus(type="button")
		+e.cost= cost
		+e.remove-btn.btn.BUTTON
			+icon('remove-btn')

mixin sCart(data)
	// start sCart
	+b.SECTION.sCart.section#sCart&attributes(attributes)
		.container
			+breadcrumb('Главная','Страница категорий','Корзина')
			.row
				+e.prod-col.col
					+b.section-title
						h1 Корзина
						+e.link(href="#") Очистить корзину
					+e.list.OL
						+cartItem('1', 'Ваш товар №1','blue','98')
						+cartItem('2', 'Наименовение товара из ассортимента','red','104')
						+cartItem('3', 'Ваш товар №1','cyan','128')
					+e.return-link(href="#")
						+icon('next') 
						| Продолжить покупки
				.col-lg-3
					+e.summary
						+e.summary-title В Вашей корзине:
						+e.summary-list.DL
							dt Товаров:
							dd 3
							dt Сумма:
							dd 8 605 р.
								+e.promocode.FORM
									+input('Промокод')
									button.btn 
										+icon("checked")
							dt Скидка:
							dd 0
							dt Итого: 
							dd 8 605 р.
						+e.term Без учёта стоимости доставки
						+e.order-btn.btn.btn-outline-primary(href="#") ОФОРМИТЬ ЗАКАЗ
					+e.term Способ доставки и оплаты вы сможете выбрать на странице оформления заказа
					+e.main-btn.btn.btn-primary Условия оплаты
					+e.main-btn.btn.btn-primary Условия доставки
	// end sCart