mixin product-item(img, title, price, oldPrice, tags)
	+b.ARTICLE.product-item
		+e.img-wrap(href="#")
			+img(`img/prod-${img}.jpg`)
			+e.top
				if tags
					+e.tags-row.UL
						+e.tags-item--new New
						+e.tags-item--sale Sale
						+e.tags-item--text Тестовый
				+e.bookmark.BUTTON.btn
					+icon('heart')
		+e.caption
			+e.title!= title
			+e.bottom
				+e.price!= price
				if oldPrice
					+e.old-price!= oldPrice
				+e.btn(href='#')
					+icon('bag')
	// /.product-item

mixin sCatalog(data)
	// start sCatalog
	+b.sCatalog.section&attributes(attributes)
		.container
