mixin sOrders(data)
	// start sOrders
	+b.sOrders.section#sOrders&attributes(attributes)
		h4 Заказы
		.tabs
			.tabs__caption
				.tabs__btn.active Оптовые заказы
				.tabs__btn Заказы
			.tabs__content.active
				table
					thead
						tr
							th № заказа
							th Дата заказа
							th Сумма (₽) и кол-во 
							th Статус 
							th Детали заказа 
							th Действия
					tbody
						tr
							td Заказ № 1725
							td 27.06.2023
							td
								+e.price
									| 83550 ₽ 
									span 120 шт.
							td
								+e.status В корзине
							td: a(href="#") Скачать XLX
							td
								+e.action 
			.tabs__content 2
	// end sOrders